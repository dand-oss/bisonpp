@PACKAGE_INIT@

include(CMakeFindDependencyMacro)

if(NOT TARGET bisonpp::bison++)
    include("${CMAKE_CURRENT_LIST_DIR}/bisonppTargets.cmake")
endif()

# Set convenience variables for consumers
# Use a more robust method to get the executable location
if(TARGET bisonpp::bison++)
    # Try IMPORTED_LOCATION first (works for imported targets)
    get_target_property(BISONPP_EXECUTABLE bisonpp::bison++ IMPORTED_LOCATION)
    if(NOT BISONPP_EXECUTABLE)
        # Try configuration-specific properties
        get_target_property(BISONPP_EXECUTABLE bisonpp::bison++ IMPORTED_LOCATION_RELEASE)
        if(NOT BISONPP_EXECUTABLE)
            get_target_property(BISONPP_EXECUTABLE bisonpp::bison++ IMPORTED_LOCATION_DEBUG)
        endif()
    endif()
endif()

# Export support file locations
# PACKAGE_PREFIX_DIR is set by @PACKAGE_INIT@ and points to the installation root
set_and_check(BISONPP_SKELETON_CC "${PACKAGE_PREFIX_DIR}/@CMAKE_INSTALL_LIBDIR@/bison.cc")
set_and_check(BISONPP_SKELETON_H "${PACKAGE_PREFIX_DIR}/@CMAKE_INSTALL_LIBDIR@/bison.h")

set(BISONPP_FOUND TRUE)

check_required_components(@PROJECT_NAME@)